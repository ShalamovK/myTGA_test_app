@model myTGA_test_project.Models.ReportHourControlsViewModel

<form id="reportHoursForm" asp-action="AddHours" asp-controller="Report"
      data-ajax-success="GetReportTable"
      data-ajax="true" data-ajax-method="POST">
    <input asp-for="ReportId" type="hidden" />
    <div class="form-group">
        <label asp-for="EmployeeId" class="col-form-label"></label>
        <select asp-for="EmployeeId" asp-items="@(new SelectList(Model.Employees, "Id", "NameFormatted"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="TaskId" class="col-form-label"></label>
        <select asp-for="TaskId" asp-items="@(new SelectList(Model.Tasks, "Id", "Name"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Hours" class="col-form-label"></label>
        <input type="number" asp-for="Hours" step="1" min="0" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Add Hours</button>
    </div>
</form>